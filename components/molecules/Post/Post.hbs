<div class="post-container"> 
    <div class="post-content">
        <div class="post-header">
            {{#if communityAvatar}}
                <div class="community-info">
                    <div class="community-avatar">
                    <img src="{{communityAvatar}}" alt="Фото сообщества">
                    </div>
                    <div class="community-name">{{groupName}}</div>
                </div>
            {{/if}}
        </div>
        <div class="post-text-container">
            <div class="post-text js-post-text">{{text}}</div>
            <button class="js-toggle-btn">Показать ещё</button>
        </div>
        <div class="post-footer">
            <div class="post-actions-container"></div>
        </div>
    </div>
</div>