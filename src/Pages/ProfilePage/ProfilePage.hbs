{{!-- pages/ProfilePage/ProfilePage.hbs --}}
<div class="profile-page">
  <div class="profile-content">
    <div class="profile-info">
      <div id="profile-card"></div>

      <div class="profile-extra">
        <div class="base-text">
          <div>День рождения</div> 
          <div class="text-accent">{{user.dobFormatted}}</div>
        </div>

        {{#if user.aboutMyself}}
          <div class="about-user">
            <div class="text-header">О себе</div>
            <div class="about-text">{{user.aboutMyself}}</div>
          </div>
        {{/if}}

        <div class="user-counts-info">
          <a class="text-accent">
            {{friends.count_friends}}
            <div class="base-text">друзей</div>
          </a>
          <a class="text-accent">
            {{friends.count_followers}}
            <div class="base-text">подписчиков</div>
          </a>
          <a class="text-accent">
            {{friends.count_follows}}
            <div class="base-text">подписок</div>
          </a>
        </div>
      </div>
    </div>

    <div class="profile-down-container">
      <div class="profile-feed-container"></div>
      <div class="folows-container"></div>
    </div>
  </div>
</div>
