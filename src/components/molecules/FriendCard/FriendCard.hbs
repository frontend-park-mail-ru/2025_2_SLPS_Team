<div class="friend-card">
    <div class="friend-card__main-content">
        <div class="friend-card__avatar">
            <img class="friend-card__img" src="{{avatarPath}}">
        </div>
        <div class="friend-card__info">
            <div class="friend-card__name">{{name}}</div>
            <div class="friend-card__age">{{age}} лет</div>
        </div>
    </div>
    <div class="friend-card__actions">
        {{#if isFriendsList}}
            <img class="fiend-actions-button" src="/public/FriendsActions/MorePointsIcon.svg">
            <div class="friend-actions-container"></div>
        {{else}}
            <div class="freind-buttons-container"></div>
        {{/if}}
    </div>
</div>