<div class="community-card">
  <div class="community-card__main-content">
    {{{svg avatarPath class="community-card__img"}}}

    <div class="community-card__info">
      <div class="community-card__name">{{name}}</div>

      {{#if description}}
        <div class="community-card__desc">{{description}}</div>
      {{/if}}

      {{#if subscribers}}
        <div class="community-card__subscribers">{{subscribers}}</div>
      {{/if}}
    </div>
  </div>

  <div class="community-card__actions"></div>
</div>
    