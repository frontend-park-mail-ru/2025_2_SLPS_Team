<div class="message-input-container">
  <button type="button" class="message-attach-btn" aria-label="Attach file">
    <img src="/public/ChatIcons/Attach.svg" alt="Attach">
  </button>

  <input class="message-file-input" type="file" multiple accept="image/*,.pdf,.doc,.docx,.zip,.rar" />

  <button type="button" class="emoji-btn" aria-label="Emoji">
    <img src="/public/ChatIcons/Emoji.svg" alt="Emoji">
  </button>

  <textarea class="input-message" placeholder="Сообщение..."></textarea>

  <button type="button" class="message-send-btn" aria-label="Send">
    <img src="/public/ChatIcons/Send.svg" alt="Send">
  </button>

  <div class="emoji-picker"></div>
</div>
